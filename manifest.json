{
    "manifest_version": 2,

    "name": "Zhihu Message",
    "description": "This extension shows your messages from www.zhihu.com",
    "version": "0.1",

    "background": {
        "scripts": ["js/eventPage.js"],
        "persistent": false
    },

    "browser_action": {
        "default_icon": "icon2.png",
        "default_popup": "myPopUp.html",
        // this line change the content of help infomation when mouse hover on our icon
        "default_title": "Click to load your messages"
    },

    "permissions": [
        "alarms",
        "activeTab",
        "https://ajax.googleapis.com/",
        "*://*.zhihu.com/"
    ]
}
